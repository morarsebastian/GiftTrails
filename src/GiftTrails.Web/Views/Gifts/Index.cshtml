@model GiftTrails.Web.Models.Gifts.IndexViewModel

@using GiftTrails.Web.Startup

@{
    ViewData["Title"] = L("GiftList");
    ViewBag.CurrentPageName = PageNames.Gifts; //The menu item will be active for this page.
}

<h2>@L("GiftList")</h2>

<table class="table">
    <thead>
        <tr>
            <th>@L("Title")</th>
            <th>@L("Description")</th>
            <th>@L("Trails No")</th>
            <th>@L("AddTrail")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Gifts)
        {
            <tr>
                <th>@item.Title</th>
                <th>@item.Description</th>
                <th>@item.Trails.Count()</th>
                <th><a class="btn btn-primary btn-sm" asp-action="Index" asp-controller="Trails" asp-route-giftId="@item.Id">@L("ViewTrails")</a> <a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Trails" asp-route-giftId="@item.Id">@L("AddTrail")</a></th>
            </tr>
        }
    </tbody>
</table>
